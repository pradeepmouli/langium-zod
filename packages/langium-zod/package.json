{
  "name": "langium-zod",
  "version": "0.4.0",
  "type": "module",
  "description": "Langium generator plugin that derives Zod schemas from grammar definitions",
  "keywords": [
    "langium",
    "zod",
    "codegen",
    "typescript",
    "ast"
  ],
  "homepage": "https://github.com/pradeepmouli/langium-zod#readme",
  "bugs": {
    "url": "https://github.com/pradeepmouli/langium-zod/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pradeepmouli/langium-zod.git",
    "directory": "packages/langium-zod"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "langium-zod": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "import": "./dist/cli.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "test": "vitest run",
    "type-check": "tsc -p tsconfig.json --noEmit",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "dependencies": {
    "langium": "^4.2.1",
    "x-to-zod": "^0.8.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "langium-cli": "^4.2.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
